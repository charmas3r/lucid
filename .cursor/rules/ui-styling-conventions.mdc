      // Good - Scroll-triggered with useInView
      const ref = useRef(null);
      const isInView = useInView(ref, { once: true });
      
      <motion.div
        ref={ref}
        initial={{ opacity: 0, y: 40 }}
        animate={isInView ? { opacity: 1, y: 0 } : {}}
        transition={{ duration: 0.6 }}
      >
        Animated content
      </motion.div>
    output: "Uses scroll-triggered animations"

  - input: |
      // Bad - No stagger effect for lists
      {items.map(item => <Card key={item.id}>{item.name}</Card>)}

      // Good - Staggered children
      <motion.div variants={staggerContainer} initial="initial" animate="animate">
        {items.map((item, i) => (
          <motion.div
            key={item.id}
            variants={fadeInUp}
            transition={{ delay: i * 0.1 }}
          >
            <Card>{item.name}</Card>
          </motion.div>
        ))}
      </motion.div>
    output: "Uses staggered animations for lists"

